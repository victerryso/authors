<%= form_for @author do |f| %>

<div class='box'>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :nationality %>
    <%= f.text_field :nationality %>
  </p>

  <p>
    <%= f.label :dob, 'Date of Birth' %>
    <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
  </p>

  <p>
    <%= f.label :image, 'Image(URL)' %>
    <%= f.text_field :image %>
  </p>

  <%= f.submit %>
</div>
<% end %>